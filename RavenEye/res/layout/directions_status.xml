<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directions_status_view"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TextView
        android:id="@+id/directions_totaldistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/directions_lefthalf"></TextView>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/directions_legdistance"
        android:layout_toRightOf="@+id/directions_totaldistance"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/directions_righthalf"></TextView>
</RelativeLayout>