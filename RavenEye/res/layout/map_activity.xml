<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <com.google.android.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:apiKey="0OkYiPSIOaUbZ8RZiJTGikd1r15tvi_HK0hEeEQ" />
    <ImageButton
        android:id="@+id/location_btn"
        android:onClick="onMyLocationClick"
        android:layout_gravity="bottom|left"
        android:src="@drawable/ic_menu_mylocation"
        android:layout_height="55dip"
        android:layout_width="55dip"
        android:scaleType="fitCenter"></ImageButton>
    <ImageButton
        android:id="@+id/directions_btn"
        android:onClick="onDirectionsClick"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_menu_directions"
        android:layout_height="55dip"
        android:layout_width="55dip"
        android:scaleType="fitCenter"></ImageButton>
</FrameLayout>